{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "FileStorageSecurityServicePrincipalID": {
            "type": "string",
            "metadata": {
                "description": "The ID of the Service Principal created for Trend Micro's App Registration."
            },
            "defaultValue": "fss-service-principal-id",
            "maxLength": 36
        },
        "ScannerStackResourceGroupName": {
            "type": "string",
            "defaultValue": "Scanner-TM-FileStorageSecurity",
            "minLength": 1,
            "maxLength": 90
        },
        "StorageStackResourceGroupName": {
            "type": "string",
            "defaultValue": "Storage-TM-FileStorageSecurity",
            "minLength": 1,
            "maxLength": 90
        },
        "BlobStorageAccountResourceID": {
            "type": "String",
            "metadata": {
                "description": "The resource ID of Storage Account to scan."
            }
        },
        "BlobSystemTopicExist": {
            "allowedValues": [
                "Yes",
                "No"
            ],
            "metadata": {
                "description": "Select <B>Yes</B> if your Blob system topic is already created."
            },
            "defaultValue": "No",
            "type": "String"
        },
        "BlobSystemTopicName": {
            "defaultValue": "BlobEventTopic",
            "type": "String",
            "metadata": {
                "description": "The existing blob system topic name or the name of blob system topic to be created."
            }
        },
        "StackPackageLocation": {
            "type": "string",
            "defaultValue": "https://file-storage-security-preview.s3.amazonaws.com"
        },
        "Version": {
            "type": "string",
            "defaultValue": "latest"
        },
        "SAS": {
            "type": "secureString",
            "defaultValue": ""
        }
    },
    "variables": {
        "location": "[deployment().location]",
        "templateLinkPrefix": "[concat(parameters('Version'), '/arm-templates')]",
        "unifiedSAS": "[if(empty(parameters('SAS')), '', if(startsWith(parameters('SAS'), '?'), parameters('SAS'), concat('?', parameters('SAS'))))]",
        "scannerStackTemplateLink": "[concat(parameters('StackPackageLocation'), '/', variables('templateLinkPrefix'), '/FSS-Scanner-Stack-Template.json', variables('unifiedSAS'))]",
        "storageStackTemplateLink": "[concat(parameters('StackPackageLocation'), '/', variables('templateLinkPrefix'), '/FSS-Storage-Stack-Template.json', variables('unifiedSAS'))]",
        "scannerRoleAssignmentTemplateLink": "[concat(parameters('StackPackageLocation'), '/', variables('templateLinkPrefix'), '/FSS-Scanner-Stack-Role-Assignment.json', variables('unifiedSAS'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('location')]",
            "name": "[parameters('ScannerStackResourceGroupName')]"
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[variables('location')]",
            "name": "[parameters('StorageStackResourceGroupName')]"
        },
        {
            "apiVersion": "2019-05-01",
            "name": "scannerStack",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', parameters('ScannerStackResourceGroupName'))]"
            ],
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('ScannerStackResourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('scannerStackTemplateLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "FileStorageSecurityServicePrincipalID": {
                        "value": "[parameters('FileStorageSecurityServicePrincipalID')]"
                    },
                    "StackPackageLocation": {
                        "value": "[parameters('StackPackageLocation')]"
                    },
                    "Version": {
                        "value": "[parameters('Version')]"
                    },
                    "SAS": {
                        "value": "[parameters('SAS')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2019-05-01",
            "name": "storageStack",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups', parameters('StorageStackResourceGroupName'))]"
            ],
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('StorageStackResourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('storageStackTemplateLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "FileStorageSecurityServicePrincipalID": {
                        "value": "[parameters('FileStorageSecurityServicePrincipalID')]"
                    },
                    "BlobStorageAccountResourceID": {
                        "value": "[parameters('BlobStorageAccountResourceID')]"
                    },
                    "ScannerIdentityPrincipalID": {
                        "value": "[reference('scannerStack').outputs.ScannerIdentityPrincipalID.value]"
                    },
                    "ScannerQueueNamespace": {
                        "value": "[reference('scannerStack').outputs.ScannerQueueNamespace.value]"
                    },
                    "BlobSystemTopicExist": {
                        "value": "[parameters('BlobSystemTopicExist')]"
                    },
                    "BlobSystemTopicName": {
                        "value": "[parameters('BlobSystemTopicName')]"
                    },
                    "StackPackageLocation": {
                        "value": "[parameters('StackPackageLocation')]"
                    },
                    "Version": {
                        "value": "[parameters('Version')]"
                    },
                    "SAS": {
                        "value": "[parameters('SAS')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2019-05-01",
            "name": "scannerStackRoleAssignment",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('ScannerStackResourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('scannerRoleAssignmentTemplateLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageStacks": {
                        "value": [ "[reference('storageStack').outputs.StorageStackResourceGroupID.value]" ]
                    },
                    "scannerQueueNamespace": {
                        "value": "[reference('scannerStack').outputs.ScannerQueueNamespace.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "TenantID": {
            "type": "string",
            "value": "[subscription().tenantId]"
        },
        "ScannerStackResourceGroupID": {
            "type": "string",
            "value": "[reference('scannerStack').outputs.ScannerStackResourceGroupID.value]"
        },
        "StorageStackResourceGroupID": {
            "type": "string",
            "value": "[reference('storageStack').outputs.StorageStackResourceGroupID.value]"
        },
        "ScriptForDeletingScannerStack": {
            "type": "string",
            "value": "[reference('scannerStack').outputs.ScriptForDeletingScannerStack.value]"
        },
        "ScriptForDeletingStorageStack": {
            "type": "string",
            "value": "[concat( reference('scannerStackRoleAssignment').outputs.ScriptForDeletingScannerStackRoleAssignments.value[0], ' && ', reference('storageStack').outputs.ScriptForDeletingStorageStack.value)]"
        }
    }
}
