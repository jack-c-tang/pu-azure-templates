{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageStacks":{
            "type":"array",
            "defaultValue": ["/subscriptions/<subscriptionID>/resourceGroups/<resourceGroupName>"],
            "metadata": {
                "description": "The array of storage stack resource groups' resource IDs."
            }
        },
        "scannerQueueNamespace": {
            "type": "String",
            "metadata": {
                "description": "The Scanner Queue's namespace name."
            }
        }
    },
    "variables": {
        "serviceBusDataSenderRoleID": "69a216fc-b8fb-44d8-bc22-1f3c2cd27a39",
        "blobListenerIdentityName": "blobListenerIdentity",
        "blobListenerIdentityAPIVersion": "2018-11-30",
        "scannerQueueScope": "[concat('Microsoft.ServiceBus/namespaces/', parameters('ScannerQueueNamespace'), '/queues/scanner_queue')]",
        "copy": [
            {
                "name": "storageStackSubscriptions",
                "count": "[length(parameters('storageStacks'))]",
                "input": "[split(parameters('storageStacks')[copyIndex('storageStackSubscriptions')], '/')[2]]"
            },
            {
                "name": "storageStackResourceGroups",
                "count": "[length(parameters('storageStacks'))]",
                "input": "[split(parameters('storageStacks')[copyIndex('storageStackResourceGroups')], '/')[4]]"
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[guid(variables('storageStackSubscriptions')[copyIndex()], variables('storageStackResourceGroups')[copyIndex()], 'ServiceBusDataSenderRoleAssignment')]",
            "scope": "[variables('scannerQueueScope')]",
            "properties": {
                "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', variables('serviceBusDataSenderRoleID'))]",
                "principalId": "[reference(resourceId(variables('storageStackSubscriptions')[copyIndex()], variables('storageStackResourceGroups')[copyIndex()], 'Microsoft.ManagedIdentity/userAssignedIdentities', variables('blobListenerIdentityName')), variables('blobListenerIdentityAPIVersion')).principalId]",
                "principalType": "ServicePrincipal"
            },
            "copy": {
                "name": "roleAssignmentCopy",
                "count": "[length(parameters('storageStacks'))]"
            }
        }
    ],
    "outputs":
    {
        "ScriptForDeletingScannerStackRoleAssignments": {
            "type": "array",
            "copy": {
                "count": "[length(parameters('storageStacks'))]",
                "input": "[format('az role assignment delete --ids {0}/providers/{1}/providers/Microsoft.Authorization/roleAssignments/{2}', resourceGroup().Id, variables('scannerQueueScope'), guid(variables('storageStackSubscriptions')[copyIndex()], variables('storageStackResourceGroups')[copyIndex()], 'ServiceBusDataSenderRoleAssignment'))]"
            }
        }
    }
}
